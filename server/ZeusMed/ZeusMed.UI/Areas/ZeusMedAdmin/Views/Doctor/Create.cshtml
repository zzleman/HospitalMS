@model DoctorPostVM
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Add New Doctor</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-3">
                        <label asp-for="Fullname" class="col-sm-2 col-form-label">Fullname</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input asp-for="Fullname"
                                       class="form-control"
                                       placeholder="John Doe" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Department" class="col-sm-2 col-form-label" for="basic-icon-default-company">Department</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text">
                                    <i class="bx bx-buildings"></i>
                                </span>
                                <input asp-for="Department"
                                       class="form-control"
                                       placeholder="Cardiology" />
                            </div>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ImagePath" class="col-sm-2 col-form-label" for="basic-icon-default-email">Image</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-image-alt"></i></span>
                                <input asp-for="ImagePath"
                                       class="form-control"
                                       placeholder="johndoe.png" />
                            </div>
                            <div class="form-text">You can use letters, numbers & periods</div>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Send</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>