@model DoctorPostVM
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Add New Doctor</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <label asp-for="Fullname" class="col-sm-2 col-form-label">Fullname</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input asp-for="Fullname"
                                       class="form-control"
                                       placeholder="John Doe"
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="Fullname"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="AssociatedServiceId" class="col-sm-2 col-form-label">Department</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-list-ul"></i>
                                </span>
                                <select asp-for="AssociatedServiceId" class="form-select" aria-label="Associated Service" aria-describedby="basic-default-email2">
                                    <option value="">Select a service</option>
                                    @foreach (var service in Model.Services)
                                    {
                                        <option value="@service.Id">@service.Title</option>
                                    }
                                </select>
                            </div>
                            <span class="text-danger" asp-validation-for="AssociatedServiceId"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="DoctorDetail.Description" class="col-sm-2 col-form-label">Description</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-file"></i></span>
                                <input asp-for="DoctorDetail.Description"
                                       class="form-control"
                                       placeholder="This doctor is working in ZeusMed."
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="DoctorDetail.Description"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ImagePath" class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-image-alt"></i></span>
                                <input asp-for="ImagePath"
                                       class="form-control"
                                       placeholder="johndoe.png"
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="ImagePath"></span>
                            <div class="form-text">You can use letters, numbers & periods</div>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>