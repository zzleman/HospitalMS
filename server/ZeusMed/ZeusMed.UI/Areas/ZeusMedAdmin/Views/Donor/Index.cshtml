
@model IEnumerable<Donor>
@{
    ViewData["Title"] = "Index";
    int count = 1;

}

<!-- Basic Bootstrap Table -->
<div class="card">
    <h1 class="card-header">Donors </h1>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Fullname</th>
                    <th>Phone Number</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Blood Group</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var donor in Model)
                {
                    <tr>
                        <th>@count</th>
                        <td>@donor.Fullname</td>
                        <td>@donor.PhoneNumber</td>
                        <td>@donor.Age</td>
                        <td>@donor.ChosenGender</td>
                        <td>@donor.ChosenBloodGroup</td>
                        <td>@donor.Quantity</td>

        
                    </tr>
                    count++;
                }

            </tbody>
        </table>
    </div>
</div>