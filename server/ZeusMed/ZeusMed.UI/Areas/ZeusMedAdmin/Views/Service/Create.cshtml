@model ServicePostVM
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <!-- Basic with Icons -->
    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0">Add New Service</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row mb-3">
                        <label asp-for="Title" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-user"></i>
                                </span>
                                <input asp-for="Title"
                                       class="form-control"
                                       placeholder="Cardiology"
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Description" class="col-sm-2 col-form-label" for="basic-icon-default-company">Description</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text">
                                    <i class="bx bx-buildings"></i>
                                </span>
                                <input asp-for="Description"
                                       class="form-control"
                                       placeholder="Cardiology is a service in ZeusMed."
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ServiceDetail.Info" class="col-sm-2 col-form-label">Info</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-info-circle"></i></span>
                                <textarea asp-for="ServiceDetail.Info"
                                          class="form-control"
                                          id="tiny">
                                </textarea>
                            </div>
                            <span class="text-danger" asp-validation-for="ServiceDetail.Info"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="ImagePath" class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-image-alt"></i></span>
                                <input asp-for="ImagePath"
                                       class="form-control"
                                       placeholder="johndoe.png"
                                       aria-label="john.doe"
                                       aria-describedby="basic-default-email2" />
                            </div>
                            <span class="text-danger" asp-validation-for="ImagePath"></span>
                            <div class="form-text">You can use letters, numbers & periods</div>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>