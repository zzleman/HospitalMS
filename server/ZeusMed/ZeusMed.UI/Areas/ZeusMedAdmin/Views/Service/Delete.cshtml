@model Service
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="row">
    <div class="col-lg">
        <div class="card mb-4">
            <img src="@Model.ImagePath" style="width:200px; margin:15px" />
            <h5 class="card-header">@Model.Title</h5>
            <div class="card-body">
                <div class="text-light small fw-medium">@Model.Description</div>
                <div class="demo-inline-spacing">
                    <form method="post" asp-route-id="@Model.Id">
                        <button style="margin-bottom:5px" type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <a asp-action="Index"> <span class="btn btn-secondary">Back To The List</span></a>
                </div>
            </div>
            <hr class="m-0" />
        </div>
    </div>

</div>