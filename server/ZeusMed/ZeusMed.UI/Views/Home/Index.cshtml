@using Microsoft.AspNetCore.Mvc.Localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IViewLocalizer localizer
@model HomeVM
@{

    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="/assets/css/index.css?v=6">
<!-- Background Area Start -->
<div class="hospital" style="background-image:url('../assets/img/image-bg.jpg')">
    <p class="bannerSubtitle"><img src="./assets/icons/pulse-icon.png" alt=""> @localizer["bannerSubtitle"]</p>
    <p class="bannerTitle">@localizer["bannerTitle-1"] <br> @localizer["bannerTitle-2"]</p>
    <p class="bannerText">
        @localizer["bannerText-1"] <br>
        @localizer["bannerText-2"]
    </p>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/zeusmedadmin/appointment/create"><button class="appointment-button" style="background-color: #245BCD; color: white;">@localizer["makeAppointment"]</button></a>
    }
    else
    {
        <a href="/zeusmedadmin/auth/login"><button class="appointment-button" style="background-color: #245BCD; color: white;">@localizer["makeAppointment"]</button></a>
    }
    <a href="/contact"><button class="appointment-button" style="background-color: white;">@localizer["contact"]</button></a>
</div>
<!-- Background Area End -->
<!-- About Area Start -->
<div class="aboutArea">
    <img class="collabImg" src="./assets/img/collab-photo.png" alt="">
    <div class="aboutAreaInfo">
        <p class="aboutHeadText">@localizer["aboutHeadText"]</p>
        <p class="aboutMainText">
            @localizer["aboutMainText"]
        </p>
        <div class="aboutAreaOptions">
            <div class="eachOption">
                <img class="editIcon" src="./assets/icons/emergency-icon.png" alt="">
                <div class="eachOptionText">
                    <p>@localizer["emergencySupport"]</p>
                    <p>@localizer["emergencySupportAlt"]</p>
                </div>
            </div>
            <div class="eachOption">
                <img class="editIcon" src="./assets/icons/support-icon.png" alt="">
                <div class="eachOptionText">
                    <p>@localizer["247support"]</p>
                    <p>@localizer["247supportAlt"]</p>
                </div>
            </div>
            <div class="eachOption">
                <img class="editIcon" src="./assets/icons/checkup-icon.png" alt="">
                <div class="eachOptionText">
                    <p>@localizer["freeCheckup"]</p>
                    <p>@localizer["freeCheckupAlt"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About Area End -->
<!-- Counter Area Start -->
<div class="counterArea" style="background-image: url('../assets/img/counter-bg.jpeg')">
    <div class="imageDoc">
        <img src="./assets/img/doctors-video.png" alt="Intro">
        <a class="playBtn" href="https://www.youtube.com/watch?v=74DWwSxsVSs&list=LL&index=1" target="_blank">
            <i class="fa fa-play changeColor"></i>
        </a>
    </div>
    <div class="counter">
        <div class="counterLeft">
            <div class="counterInfo">
                <img class="counterIcons" src="./assets/icons/group-icon.png" alt="">
                <div class="counterText">
                    <p class="akhiValue" data-target="67013">0</p>
                    <p class="labelText">@localizer["labelText-1"]</p>
                </div>
            </div>
            <div class="counterInfo">
                <img class="counterIcons" src="./assets/icons/business-icon.png" alt="">
                <div class="counterText">
                    <p class="akhiValue" data-target="689">0</p>
                    <p class="labelText">@localizer["labelText-2"]</p>
                </div>
            </div>
        </div>
        <div class="counterRight">
            <div class="counterInfo">
                <img class="counterIcons" src="./assets/icons/patient-icon.png" alt="">
                <div class="counterText">
                    <p class="akhiValue" data-target="58962">0</p>
                    <p class="labelText">@localizer["labelText-3"] </p>
                </div>
            </div>
            <div class="counterInfo">
                <img class="counterIcons" src="./assets/icons/medal-icon.png" alt="">
                <div class="counterText">
                    <p class="akhiValue" data-target="8712">0</p>
                    <p class="labelText">@localizer["labelText-4"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Counter Area End -->
<!-- Services Area Start -->
<div class="servies">
    <p class="servicesSubText">@localizer["servicesSubText"]</p>
    <p class="servicesMainText">@localizer["servicesMainText"]</p>


    <div class="card-container swiper">
        <div class="slide-content">
            <div class="card-wrapper swiper-wrapper">
                @foreach (var service in Model.Services.Take(6))
                {
                    <div class="card swiper-slide">
                        <img src="@service.ImagePath" class="card-img-top" alt="Surgery Service">
                        <div class="card-body">
                            <h5 class="service-title">@service.Title</h5>
                            <p class="service-content" style="margin-top:-40px">
                                @Html.Raw(service.Description.Substring(0, 119))
                            </p>
                            <a href="@Url.Action("Index", "ServiceDetail", new { id = service.Id })" id="service-btn" class="btn btn-primary">@localizer["viewDetails"]</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>
<!-- Services Area End -->
<!-- Gallery Area Start -->
<div class="gallery-container" style="background-image: url('../assets/img/gallery-bg.png');">
    <div class="gallery-content">
        <p class="gallery_title">@localizer["galeryTitle"]</p>
        <p class="gallery_text">@localizer["galleryText"]</p>
    </div>

    <div class="gallery-area">
        <a href="/servicedetail/index/7">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/infection-services.jpeg" alt="">
                <div class="show_up_text">
                    <div class="text">Infectious Diseases</div>
                </div>
            </div>
        </a>
        <a href="/servicedetail/index/4">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/emergency-service.png" alt="">
                <div class="show_up_text">
                    <div class="text">Emergency Service</div>
                </div>
            </div>
        </a>
        <a href="/servicedetail/index/5">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/checkup-services.jpeg" alt="">
                <div class="show_up_text">
                    <div class="text">Check-Up</div>
                </div>
            </div>
        </a>
        <a href="/servicedetail/index/3">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/surgery-services.jpeg" alt="">
                <div class="show_up_text">
                    <div class="text">Surgery</div>
                </div>
            </div>
        </a>
        <a href="/servicedetail/index/11">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/chest-diseases-services.png" alt="">
                <div class="show_up_text">
                    <div class="text">Chest Diseases</div>
                </div>
            </div>
        </a>
        <a href="/servicedetail/index/17">
            <div class="gallery_img">
                <img class="service_img" src="./assets/img/cardiovascular-surgery-services.jpeg" alt="">
                <div class="show_up_text">
                    <div class="text">Cardiovascular Surgery</div>
                </div>
            </div>
        </a>
    </div>
</div>
<!-- Gallery Area End -->
<!-- Doctors Area Start -->
<div class="doctors-container">
    <div class="doctors-content"
        <p class="doctors_title">@localizer["doctorsTitle"]</p>
        <p class="doctors_text">@localizer["doctorsText"]</p>
    </div>
    <div class="doctors-area">
        @foreach (var doctor in Model.Doctors.Take(8))
        {
            <div class="doctors-info">
                <img class="doctors_img" src="@doctor.ImagePath" alt="">
                <p class="doctor_name">@doctor.Fullname</p>
                <p class="doctor_department">@doctor.AssociatedService.Title</p>

                <div class="show_up_button">
                    <a href="@Url.Action("Index", "DoctorDetail", new { doctorDetailId = doctor.Id })">
                        <button class="doctors_button">@localizer["viewProfile"]</button>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
<!-- Doctors Area End -->
