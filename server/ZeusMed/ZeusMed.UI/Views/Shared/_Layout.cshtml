@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/svg/zeusmed_logo copy.svg">
    <title> ZeusMed Medical Center</title>
    <link rel="stylesheet" href="/assets/css/index.css?v=4">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/swiper-bundle.min.css">
    <script src="https://cdn.tiny.cloud/1/nwldzu0d5d3x2i6e0oce85q2iravyfkd6kvy0yt5rfxht1bi/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({
            selector: 'textarea#tiny',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
        });</script>
</head>
<body>
    <!-- Header Area Start -->
    <header>
        <div class="support">
            <i class="fa-solid fa-headphones-simple fa-bounce" style="color: #606060; font-size: 22px;"></i>
            <span>@localizer["support"]</span>
        </div>
        <p class="number">(0212) 441 41 32</p>
        <div class="icons">
            <a href="https://www.facebook.com/hospital.avrasiya" target="_blank"><img src="/assets/svg/facebook-icon.svg" alt="Facebook"></a>
            <a href="https://en.wikipedia.org/wiki/Google%2B" target="_blank"><img src="/assets/svg/google-plus-icon.svg" alt="Google Plus"></a>
            <a href="https://www.linkedin.com/company/hospital-albert-einstein/" target="_blank"><img src="/assets/svg/linkedin-icon.svg" alt="Linkedin"></a>
        </div>
    </header>
    <!-- Navbar Start -->
    <nav>
        <a href="/"><img class="zeusLogo" src="/assets/img/zeusmed-logo.png" alt=""></a>
        <ul class="menu">
            <li><a href="/">@localizer["home"]</a></li>
            <li><a href="/about">@localizer["aboutUs"]</a></li>
            <li><a href="/doctor">@localizer["doctors"]</a></li>
            <li class="dropdown">
                <a class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-mdb-toggle="dropdown"
                   aria-expanded="false" href="/service">
                    @localizer["services"]
                </a>
                <div class="dropdown-service">
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li class="service-item">
                            <ul class="left-service">
                                <li><a class="dropdown-item" href="/servicedetail/index/1">@localizer["service-NaD"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/4">@localizer["service-ES"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/7">Infectious Diseases</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/10">General Intensive Care</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/15">Aviation Medical Center</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/18">Cardiology</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/21">Ear Nose Throat</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/24">Oudiology</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/27">Plastic Surgery</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/30">Radiology</a></li>
                            </ul>
                        </li>
                        <li class="service-item">
                            <ul class="mid-service">
                                <li><a class="dropdown-item" href="/servicedetail/index/2">@localizer["service-AaR"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/5">@localizer["service-CU"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/8">Physical Therapy and Rehabilitation</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/11">Chest Diseases</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/16">Internal Diseases</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/19">Clinical Laboratory</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/22">Neurology</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/25">Orthopedics</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/28">Psychiatry</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/31">Urology</a></li>
                            </ul>
                        </li>
                        <li class="service-item">
                            <ul class="right-service">
                                <li><a class="dropdown-item" href="/servicedetail/index/3">@localizer["service-S"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/6">@localizer["service-D"]</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/9">General Surgery</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/14">Eye Diseases</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/17">Cardiovascular Surgery</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/20">Coronary Intensive Care </a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/23">Obesity</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/26">Pediatrics</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/29">Psychology</a></li>
                                <li><a class="dropdown-item" href="/servicedetail/index/32">Newborn Intensive Care</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </li>
            <li><a href="/contact">@localizer["contact"]</a></li>
            <li style="margin-top:-18px" class="p-3">
                <partial name="_SelectLanguage" />
            </li>
            <li class="nav-item dropdown">
                <a class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-regular fa-user" style="color: #050505;"></i>
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="dropdown-menu" id="lang-dropdown" aria-labelledby="languageDropdown">
                        <div>
                            <a class="dropdown-item" href="/ZeusMedAdmin/Dashboard">@User.Identity.Name</a>
                        </div>
                        <div>
                            <a class="dropdown-item" href="/ZeusMedAdmin/Auth/Logout">@localizer["signOut"]</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="dropdown-menu" id="lang-dropdown" aria-labelledby="languageDropdown">
                        <div>
                            <a class="dropdown-item" href="/ZeusMedAdmin/Auth/Login">@localizer["signIn"]</a>
                        </div>
                        <div>
                            <a class="dropdown-item" href="/ZeusMedAdmin/Auth/Register">@localizer["signUp"]</a>
                        </div>
                    </div>
                }
            </li>

        </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/zeusmedadmin/appointment/create"><button class="appointment-button" style="background-color: #245BCD; color: white;">@localizer["makeAppointment"]</button></a>
        }
        else
        {
            <a href="/zeusmedadmin/auth/login"><button class="appointment-button" style="background-color: #245BCD; color: white;">@localizer["makeAppointment"]</button></a>
        }
        <div class="ham-menu" id="open-menu">
            <i class="fas fa-bars fa-2x"></i>
        </div>

        <!-- Hidden menu -->
        <div class="hidden-menu" id="menu">
            <div class="menu-content">
                <!-- Close button -->
                <div class="menu-close" id="close-menu">
                    <i class="fas fa-times fa-2x"></i>
                </div>
                <!-- Your menu items go here -->
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/doctor">Doctors</a></li>
                    <li><a href="/service">Services</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <!-- Add more menu items as needed -->
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <!-- Header Area End -->

    @RenderBody()

    <!-- Book Now Area Start -->
    <div class="book-now" style="background-image: url('/assets/img/book-now.jpg')">
        <p class="book-title" style="color:white">@localizer["book-title"]</p>
        <p class="book-text" style="color:white">@localizer["book-text-1"] <br> @localizer["book-text-2"]</p>
        <div class="book-buttons">
            @if (User.Identity.IsAuthenticated)
            {
                <a href="/zeusmedadmin/appointment/create"><button class="book-button" style="background-color: #13181f;color:white "><i class="fa-regular fa-calendar-check" style="color: #ffffff;"></i>@localizer["makeAppointment"]</button></a>
            }
            else
            {
                <a href="/zeusmedadmin/auth/login"><button class="book-button" style="background-color: #13181f;color:white "><i class="fa-regular fa-calendar-check" style="color: #ffffff;"></i>@localizer["makeAppointment"]</button></a>
            }
            <a href="/service"><button class="book-button" style="background-color:transparent; border: 1px solid white;"><i class="fa-solid fa-hand-holding-medical" style="color: #ffffff;"></i>@localizer["services"]</button></a>
        </div>
    </div>
    <!-- Book Now Area End -->
    <!-- Footer Area Start -->
    <div class="footer-container">
        <div class="footer-first">
            <div class="footer-top">
                <div class="footer-hist">
                    <img class="footer-logo" src="/assets/img/zeusmed-logo.png" alt="">
                    <div class="footer-info">
                        <p>
                            @localizer["footer-info-t"]
                        </p>
                    </div>
                </div>
                <div class="footer-contact">
                    <p class="footer-heading">@localizer["contact"]</p>
                    <p class="address">
                        @localizer["contact-address"]
                    </p>
                    <hr>
                    <div class="helpline">
                        <i class="fa-solid fa-mobile-screen-button" style="color: #ffffff;"></i>
                        <span>Helpline 1 :</span>
                        <span>1 (0212) 441 41 42</span>
                    </div>
                    <div class="helpline">
                        <i class="fa-solid fa-mobile-screen-button" style="color: #ffffff;"></i>
                        <span>Helpline 2:</span>
                        <span>2 444 3 515</span>
                        <hr>
                    </div>
                    <div class="footer-icons">
                        <a href="https://www.facebook.com/hospital.avrasiya" target="_blank"><i class="fa-brands fa-facebook-f" style="color: #ffffff;"></i></a>
                        <a href="https://en.wikipedia.org/wiki/Google%2B" target="_blank"><i class="fa-brands fa-google-plus-g" style="color: #ffffff;"></i></a>
                        <a href="https://www.linkedin.com/company/hospital-albert-einstein/" target="_blank"><i class="fa-brands fa-linkedin-in" style="color: #ffffff;"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-mid">
                <div class="quick-links">
                    <p class="links-head">@localizer["quickLink"]</p>
                    <ul class="links-ul">
                        <li><a href="/about">@localizer["aboutUs"]</a></li>
                        <li><a href="/">@localizer["home"]</a></li>
                        <li><a href="/zeusmedadmin/auth/login">@localizer["signIn"]</a></li>
                    </ul>
                </div>
                <div class="support-help">
                    <p class="links-head">@localizer["supportHelp"]</p>
                    <ul class="links-ul">
                        <li><a href="/doctor">@localizer["doctors"]</a></li>
                        <li><a href="/service">@localizer["services"]</a></li>
                        <li><a href="/contact">@localizer["contact"]</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-second">
            <div class="footer-bottom">
                <hr style="width:90%;margin-left: 50px;">
                <p>© 2023 ZeusMed Corporate Website – Private ZeusMed Medical Center . All rights reserved.</p>
            </div>
        </div>
    </div>
    <!-- Footer Area End -->
</body>
<script src="/assets/js/swiper-bundle.min.js"></script>
<script defer  src="./assets/js/index.js"></script>
</html>